
@{
    ViewBag.Title = "Sponsors";
}

<section class="background-color-white container-fluid">
    <div class="container row center-block marginz-vertical">
        <div class="nav-spacer"></div>
        <div class="content-box">
            <div class="row sponsor">
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <a href="http://twitch.tv/">
                        @Html.Image("Logos/Twitch_BlackLogo.png", "Twitch", new string[] { "width:100%" })
                    </a>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <h3>About Twitch:</h3>
                    <p>Twitch is the worlds leading video platform and community for gamers. Our events are streamed live on <a href="https://www.twitch.tv/esportsinitiative">twitch.tv/esportsinitiative</a>.</p>
                </div>
            </div>

            <div class="row sponsor">
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <a href="https://steelseries.com/">
                        @Html.Image("Logos/steelseries_logo_05_hd_wallpaper.png", "SteelSeries", new string[] { "width:100%" })
                    </a>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <h3>About SteelSeries:</h3>
                    <p>SteelSeries is a leading provider of gaming peripherals including mice, keyboards and headsets.</p>
                </div>
            </div>

            <div class="row sponsor">
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <a href="https://xsplit.com/">
                        @Html.Image("Logos/xsplit-white.png", "XSplit", new string[] { "width:100%" })
                    </a>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <h3>About XSplit:</h3>
                    <p>XSplit allows recording, streaming, and sharing of your best gaming moments.</p>
                </div>
            </div>

            <div class="row sponsor">
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <a href="https://challonge.com/">
                        @Html.Image("Logos/challonge-white.png", "XSplit", new string[] { "width:100%" })
                    </a>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <h3>About Challonge:</h3>
                    <p>Challonge empowers tournament brackets enabling a competitive atmospher from your roommate 1v1's to Shuffle IIX.</p>
                </div>
            </div>

            <div class="row sponsor">
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <a href="https://player.me/">
                        @Html.Image("Logos/player_me.png", "Player Me", new string[] { "width:100%" })
                    </a>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <h3>About Player.Me:</h3>
                    <p>Player.me is a gaming network about discovering and connecting with players, games, streamers, developers, and friends around a shared love for games.</p>
                </div>
            </div>
        </div>
    </div>
</section>
